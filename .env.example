# Environment Configuration for Auth System

# API Base URL (required)
VITE_API_BASE_URL=http://localhost:3000

# App Environment
VITE_APP_ENV=development

# Auth Configuration (optional - defaults are provided)
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=refresh_token
VITE_AUTH_AUTO_REFRESH=true
VITE_AUTH_PERSIST=true

# Token expiration buffer (in minutes)
VITE_AUTH_TOKEN_BUFFER=5

# API Endpoints (optional - defaults are provided)
VITE_LOGIN_ENDPOINT=/endpoint/login
VITE_SIGNUP_ENDPOINT=/endpoint/signup
VITE_DELETE_ACCOUNT_ENDPOINT=/endpoint/deleteAccount

# Security (for production)
VITE_SECURE_COOKIES=true
VITE_SAME_SITE=strict
